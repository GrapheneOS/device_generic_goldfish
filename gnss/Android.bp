}

cc_binary {
    name: "android.hardware.gnss-service.ranchu",
    vendor: true,
    relative_install_path: "hw",
    init_rc: ["android.hardware.gnss-service.ranchu.rc"],
    vintf_fragments: ["android.hardware.gnss-service.ranchu.xml"],
    srcs: [
        "Agnss.cpp",
        "AgnssRil.cpp",
        "GnssAntennaInfo.cpp",
        "GnssBatching.cpp",
        "GnssConfiguration.cpp",
        "GnssDebug.cpp",
        "GnssHwConn.cpp",
        "GnssHwListener.cpp",
        "GnssGeofence.cpp",
        "GnssMeasurementInterface.cpp",
        "GnssNavigationMessageInterface.cpp",
        "GnssPowerIndication.cpp",
        "GnssPsds.cpp",
        "GnssVisibilityControl.cpp",
        "Gnss.cpp",
        "MeasurementCorrectionsInterface.cpp",
        "main.cpp",
    ],
    shared_libs: [
        "libbase",
        "libbinder_ndk",
        "liblog",
        "libutils",
        "android.hardware.gnss-V2-ndk",
    ],
    static_libs: [
        "libqemud.ranchu",
    ],
    header_libs: [
        "libdebug.ranchu",
    ],
    cflags: [
        "-DLOG_TAG=\"android.hardware.gnss-service.ranchu\"",
        "-DANDROID_BASE_UNIQUE_FD_DISABLE_IMPLICIT_CONVERSION",
    ],
}
